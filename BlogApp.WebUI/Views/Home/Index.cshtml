@model HomeBlogModel
@{
    ViewData["Title"] = "Index";
}


<div class="container">

    <a class="btn btn-success" asp-controller="Home" asp-action="List">
        Home Blog List
    </a>
    <br />
    <br />
    <div class="row">
        <div class="col-md-12 mb-3">
            @Html.Partial("_Slider", Model.SliderBlogs)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategoryMenu")
        </div>
        <div class="col-md-9">
            @Html.Partial("_BlogList", Model.HomeBlogs)
        </div>
    </div>

</div>
