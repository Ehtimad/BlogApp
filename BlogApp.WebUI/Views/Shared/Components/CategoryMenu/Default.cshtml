@model IEnumerable<Category>
<div class="list-group">
    @foreach (var category in Model)
    {
        <a
           asp-controller="Blog"
           asp-action="Index"
           asp-route-id="@category.Id"
           class="list-group-item @(ViewBag.SelectedCategory==category.Id.ToString()?"active":"")">
            @category.Name
        </a>
    }
</div>